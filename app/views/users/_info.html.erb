<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  
  <!--↓フォローの記述-->
  <tr>

    <th><%= link_to user.followers.count, follower_user_path(user) %>フォロー</th>
    <th><%= link_to user.followeds.count, followed_user_path(user) %>フォロワー</th>
        
    <th>
      <% if user.id == current_user.id %>
      <% else %>
      <% if user.follower_by?(current_user) %>
      <%= link_to user_relationships_path(user), method: :delete do %>
      <button type="button" class="btn btn btn-danger">フォローしない</button>
      <% end %>
      <% else %>
      <%= link_to user_relationships_path(user), method: :post do %>
      <button type="button" class="btn btn btn-primary">フォロー</button>
      <% end %>
      <% end %>
      <% end %>
    </th>
    
  </tr>
</table>

<div class='row'>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>